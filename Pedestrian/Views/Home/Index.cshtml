@{
    ViewBag.Title = "山友集中营";
}
<link href="~/Content/css/index.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/js/index.js"></script>
<link href="~/Content/css/init.css" rel="stylesheet" />
<div>
    <div id="myCarousel" class="carousel slide">
        <!-- 轮播（Carousel）指标 -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <!-- 轮播（Carousel）项目 -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Content/images/1.png" alt="First slide">
            </div>
            <div class="item">
                <img src="~/Content/images/2.png" alt="Second slide">
            </div>
            <div class="item">
                <img src="~/Content/images/3.png" alt="Third slide">
            </div>
        </div>
        <!-- 轮播（Carousel）导航 -->
        <a class="carousel-control left" href="#myCarousel"
           data-slide="prev">
            &lsaquo;
        </a>
        <a class="carousel-control right" href="#myCarousel"
           data-slide="next">
            &rsaquo;
        </a>
    </div>
    @{
        for (int i = 0; i < 2; i++)
        {
            <div class="tourleftFloat">
                <a href="#">
                    <img class="image" src="~/Content/images/7.jpg" />
                    <h5 class="ui-act-title">
                        已报15人【新路线】8.14赏牛塘山高山草甸，访神秘百年石头古村
                    </h5>

                    <div class="xq">
                        <span class="xq-rq">08月14日出发</span>
                        <span class="xq-qian">￥125</span>
                    </div>
                </a>
            </div>
        }
    }

</div>
